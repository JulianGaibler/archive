{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "target": "ES2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "baseUrl": ".",
    "outDir": "./dist",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@src/*": ["src/*"],
      "@db/*": ["db/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
