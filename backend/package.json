{
  "name": "archive-backend",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "dotenv -e ../.env.dev -- tsx watch src",
    "build": "rimraf dist && tsc && tsc-alias",
    "start": "dotenv -e ../.env.dev -- node dist/index.js",
    "lint": "eslint src/",
    "prettier": "prettier --write --check 'src/**/*.*'",
    "migrate": "./scripts/set-db-url.sh ts-node node_modules/.bin/node-pg-migrate --tsconfig tsconfig.json",
    "migrate-files": "dotenv -e ../.env.dev -- tsx scripts/migrate-files.ts",
    "migrate-files:validate": "dotenv -e ../.env.dev -- tsx scripts/migrate-files.ts --validate-only",
    "reconcile-files": "dotenv -e ../.env.dev -- tsx scripts/reconcile-files.ts",
    "drizzle": "dotenv -e ../.env.dev -- tsx ./node_modules/.bin/drizzle-kit",
    "generate": "graphql-codegen --config codegen.ts"
  },
  "dependencies": {
    "@apollo/server": "^5.2.0",
    "@as-integrations/express5": "^1.1.2",
    "@graphql-tools/schema": "^10.0.31",
    "@paralleldrive/cuid2": "^3.0.6",
    "argon2": "^0.44.0",
    "chalk": "^5.6.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dataloader": "^2.2.3",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "express": "^5.2.1",
    "file-type": "^21.3.0",
    "fs-capacitor": "^8.0.0",
    "graphql": "^16.12.0",
    "graphql-relay": "^0.10.2",
    "graphql-subscriptions": "^3.0.0",
    "graphql-upload": "^17.0.0",
    "hashids": "^2.3.0",
    "morgan": "^1.10.1",
    "node-vibrant": "^4.0.3",
    "pg": "^8.17.1",
    "pg-escape": "^0.2.0",
    "pg-ipc": "^1.0.5",
    "pg-listen": "^1.7.0",
    "postgres": "^3.4.8",
    "sharp": "^0.34.5",
    "string-strip-html": "^13.5.3",
    "telegraf": "^4.16.3",
    "tmp": "^0.2.5",
    "ua-parser-js": "^2.0.8",
    "ws": "^8.19.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^6.1.1",
    "@graphql-codegen/typescript": "^5.0.7",
    "@graphql-codegen/typescript-resolvers": "^5.1.5",
    "@types/body-parser": "^1.19.6",
    "@types/cookie": "^0.6.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "5.0.6",
    "@types/graphql-upload": "^17.0.0",
    "@types/morgan": "^1.9.10",
    "@types/node": "25.0.9",
    "@types/pg": "^8.16.0",
    "@types/sharp": "^0.31.1",
    "@types/tmp": "^0.2.6",
    "@types/ws": "^8.18.1",
    "dotenv-cli": "11.0.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsdoc": "^62.0.1",
    "globals": "^17.0.0",
    "graphql-ws": "^6.0.6",
    "node-pg-migrate": "^8.0.4",
    "prettier": "^3.8.0",
    "prettier-plugin-jsdoc": "^1.8.0",
    "rimraf": "^6.1.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.53.0"
  }
}
