# ENV_VERSION=2.0.0
# CI/Testing Environment - Safe to commit (no secrets)
# This file is used for CI builds and local testing

# Shared
NODE_ENV=development
CORS_ORIGIN=http://localhost:4321
PUBLIC_URL=http://localhost:4321

# Path Configuration
GRAPHQL_PATH=/graphql
WEBSOCKET_PATH=/websocket

# Database (test values)
POSTGRES_DB=archive_test
POSTGRES_USER=archive_test
POSTGRES_PASSWORD=test_password_not_for_production
BACKEND_POSTGRES_HOST=localhost
BACKEND_POSTGRES_PORT=5432

# Backend
BACKEND_PORT=4000
BACKEND_FILE_STORAGE_DIR=./test-files
BACKEND_UPLOAD_MAX_FILE_SIZE=52428800
BACKEND_UPLOAD_MAX_FILES=10
BACKEND_SESSION_SECRETS="1=ci-test-secret-not-for-production"
BACKEND_TELEGRAM_BOT_TOKEN=
BACKEND_CREATE_ACCOUNTS=allowed

# Frontend
FRONTEND_PORT=4321
FRONTEND_PUBLIC_API_BASE_URL=http://localhost:4000
FRONTEND_PRIVATE_API_BASE_URL=http://localhost:4000
FRONTEND_FILES_BASE_URL=http://localhost:4000/files
FRONTEND_LEGAL_LINK_LABEL=Legal
FRONTEND_LEGAL_LINK_URL=/legal
