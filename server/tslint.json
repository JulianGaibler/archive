{
  "extends": [
    "tslint:latest",
    "tslint-config-prettier",
    "tslint-plugin-prettier"
  ],
  "rules": {
    "indent": [true, "spaces", 4],
    "semicolon": [true, "never"],
    "no-submodule-imports": false,
    "object-literal-sort-keys": false,
    "member-ordering": false,
    "member-access": false,
    "prettier": [true, {
      "printWidth": 100,
      "semi": true,
      "useTabs": false,
      "singleQuote": true,
      "trailingComma": "es5",
      "bracketSpacing": true
    }]
  }
}
