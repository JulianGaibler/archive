{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "baseUrl": "src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true,
    "lib": ["es2015", "es2017", "dom", "esnext.asynciterable"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
