---
import clientEnv from 'virtual:env/client'

const currentYear = new Date().getFullYear()
const legalLabel = clientEnv.FRONTEND_LEGAL_LINK_LABEL
const legalUrl = clientEnv.FRONTEND_LEGAL_LINK_URL
---

<footer>
  <span
    >© 2016-{currentYear} Juliana Gaibler · <a href={legalUrl}>{legalLabel}</a
    ></span
  >
</footer>

<style lang="sass">
  footer
    margin-top: 16px
    text-align: center
    padding: 32px 16px
    color: var(--tint-text-secondary)
</style>
