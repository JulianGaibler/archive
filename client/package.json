{
    "name": "client",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "build": "vue-cli-service build",
        "lint": "vue-cli-service lint",
        "dev": "vue-cli-service serve",
        "i18n:report": "vue-cli-service i18n:report --src './src/**/*.?(js|vue)' --locales './src/locales/**/*.json'"
    },
    "dependencies": {
        "apollo-link": "^1.2.12",
        "apollo-link-http": "^1.5.15",
        "apollo-upload-client": "^11.0.0",
        "core-js": "^3.2.1",
        "debounce": "^1.2.0",
        "lottie-web": "^5.5.7",
        "luxon": "^1.17.2",
        "ua-parser-js": "^0.7.20",
        "v-click-outside": "^2.1.3",
        "vue": "^2.6.10",
        "vue-apollo": "^3.0.0-rc.2",
        "vue-i18n": "^8.14.0",
        "vue-router": "^3.1.2"
    },
    "devDependencies": {
        "@vue/cli-plugin-babel": "^3.11.0",
        "@vue/cli-plugin-eslint": "^3.11.0",
        "@vue/cli-service": "^3.11.0",
        "babel-eslint": "^10.0.2",
        "eslint": "^6.2.2",
        "eslint-plugin-vue": "^5.2.3",
        "graphql-tag": "^2.10.1",
        "stylus": "^0.54.7",
        "stylus-loader": "^3.0.2",
        "vue-cli-plugin-apollo": "^0.21.0",
        "vue-cli-plugin-i18n": "^0.6.0",
        "vue-cli-plugin-svg": "^0.1.3",
        "vue-template-compiler": "^2.6.10"
    },
    "eslintConfig": {
        "root": true,
        "env": {
            "node": true
        },
        "extends": [
            "plugin:vue/essential",
            "eslint:recommended"
        ],
        "rules": {
            "vue/html-indent": ["error", 4],
            "vue/max-attributes-per-line": ["error", {
              "singleline": 3
            }],
            "no-console": 0,
            "indent": [
                "error",
                4
            ],
            "semi": [
                "error",
                "never"
            ],
            "quotes": [
                "error",
                "single",
                {
                    "allowTemplateLiterals": true
                }
            ],
            "comma-dangle": [
                "error",
                "always-multiline"
            ],
            "no-var": [
                "error"
            ],
            "arrow-spacing": [
                "error"
            ],
            "object-curly-spacing": [
                "error",
                "always"
            ],
            "func-call-spacing": [
                "error",
                "never"
            ]
        },
        "parserOptions": {
            "parser": "babel-eslint"
        }
    },
    "postcss": {
        "plugins": {
            "autoprefixer": {}
        }
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not ie <= 8"
    ],
    "eslintIgnore": [
        "*.gql"
    ]
}
