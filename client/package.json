{
    "name": "client",
    "version": "1.0.1",
    "private": true,
    "scripts": {
        "build": "vue-cli-service build",
        "lint": "vue-cli-service lint",
        "dev": "vue-cli-service serve",
        "i18n:report": "vue-cli-service i18n:report --src './src/**/*.?(js|vue)' --locales './src/locales/**/*.json'"
    },
    "dependencies": {
        "apollo-link": "^1.2.13",
        "apollo-link-http": "^1.5.16",
        "apollo-upload-client": "^12.1.0",
        "core-js": "^3.6.4",
        "debounce": "^1.2.0",
        "focus-visible": "^5.0.2",
        "lottie-web": "^5.6.4",
        "marked": "^0.8.0",
        "ua-parser-js": "^0.7.21",
        "v-click-outside": "^3.0.1",
        "vue": "^2.6.11",
        "vue-apollo": "^3.0.3",
        "vue-i18n": "^8.15.3",
        "vue-router": "^3.1.5"
    },
    "devDependencies": {
        "@vue/cli-plugin-babel": "^4.2.2",
        "@vue/cli-plugin-eslint": "^4.2.2",
        "@vue/cli-service": "^4.2.2",
        "babel-eslint": "^10.0.3",
        "cross-spawn": "^7.0.1",
        "eslint": "^6.8.0",
        "eslint-plugin-vue": "^6.1.2",
        "graphql-tag": "^2.10.3",
        "luxon": "^1.22.0",
        "nprogress": "^0.2.0",
        "stylus": "^0.54.7",
        "stylus-loader": "^3.0.2",
        "toml": "^3.0.0",
        "vue-cli-plugin-apollo": "^0.21.3",
        "vue-cli-plugin-i18n": "^0.6.1",
        "vue-cli-plugin-svg": "^0.1.3",
        "vue-template-compiler": "^2.6.11"
    },
    "eslintConfig": {
        "root": true,
        "env": {
            "node": true
        },
        "extends": [
            "plugin:vue/essential",
            "eslint:recommended"
        ],
        "rules": {
            "vue/html-indent": [
                "error",
                4
            ],
            "vue/max-attributes-per-line": [
                "error",
                {
                    "singleline": 3
                }
            ],
            "no-console": 0,
            "indent": [
                "error",
                4
            ],
            "semi": [
                "error",
                "never"
            ],
            "quotes": [
                "error",
                "single",
                {
                    "allowTemplateLiterals": true
                }
            ],
            "comma-dangle": [
                "error",
                "always-multiline"
            ],
            "no-var": [
                "error"
            ],
            "arrow-spacing": [
                "error"
            ],
            "object-curly-spacing": [
                "error",
                "always"
            ],
            "func-call-spacing": [
                "error",
                "never"
            ]
        },
        "parserOptions": {
            "parser": "babel-eslint"
        }
    },
    "postcss": {
        "plugins": {
            "autoprefixer": {}
        }
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not ie <= 8"
    ],
    "eslintIgnore": [
        "*.gql"
    ]
}
