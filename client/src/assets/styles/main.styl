@import "./reset"
@import "./mixins"
@import "./palette"

@import url('https://fonts.googleapis.com/css?family=Heebo:400,500,600');

* {
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
}

html, body, #app
    height 100%

body
    font-family 'Heebo', sans-serif

input, button, textarea, select, a
    text-decoration inherit
    background unset
    border none
    color inherit
    font-family inherit
    font-size inherit
    outline none

h1
    font-size 3.3rem
    font-weight 600
h2
    font-size 1.6rem
    font-weight 500

#app
    height 100%
    display flex
    main
        flex 1

.errorBox
    background $archive-prim2-light
    color $archive-prim1
    padding 1rem
    border-radius $archive-radius2
    margin-bottom 1rem

.sidebar
    border-bottom-left-radius $archive-radius1
    min-width 15rem
    display flex
    flex-direction column
    padding .75rem 2rem 1.5rem 2rem
    hr
        border none
        border-top 1px solid rgba(0, 0, 0, 0.03)
        margin 0
    .sidebar-button
        background url('data:image/png;base64,')
        border-radius 40%
        fill: #ffffff
        line-height 0
        margin-right 0.75rem
        width 2.75rem
        height 2.75rem
    .sidebar-header
        display flex
        align-items center
        margin 2rem 0
        margin-left 0.625rem
        .nameCombo
            flex 1
    nav
        font-weight 500
        flex 1
        ul
            margin 1.5rem 0
            a
                display flex
                align-items center
                svg
                    margin 0.625rem
                &.router-link-active
                    background rgba($archive-prim, .1)
                    color $archive-prim
                    fill $archive-prim
                    border-radius $archive-radius3
    .notification
        .notification-box
            margin-top 1rem
            background $archive-grey
            transition all .5s
            border-radius $archive-radius3
            display flex
            flex-direction column
            padding 1.25rem
            h1

            p
                margin-top 0.2rem
                font-size 0.875rem
            .top
                display flex
                align-items center
                .icon
                    width 1.5rem
                    margin-right 1rem
            .btm
                margin-top 1rem
                display flex
                .progress
                    transition flex .5s
                    &:not(:last-child)
                        margin-right 0.5rem

.notification-enter, .notification-leave-to {
  opacity 0
  z-index -1
}
.notification-leave-active {
  position absolute
  width 12.5rem
}

// Components

.actionBar
    display flex
    > .actionBar-grower
        flex 1
    :not(:last-child)
        margin-right 0.75rem

.actionBar-component
    background #F6F6F6
    display flex
    align-items center
    border-radius $archive-radius2
    &.actionBar-component-search
        flex 1
        padding 0 0.625rem
        display flex
        > input
            flex 1
    &.actionBar-component-text
        font-weight 500
        padding $archive-radius2
        line-height 0

.button
    background #F6F6F6
    font-weight 600
    padding 0 1.5rem
    height 2.75rem
    border-radius $archive-radius2
    &.button-primary
        background $archive-inv
        color white
        fill white
    &.button-icon
        display flex
        justify-content center
        align-items center
        padding 0
        width 2.75rem


.nameCombo
    .name, .username
        display inline-block
    .name
        font-weight 600
        font-size 1.33em
        color: $archive-inv
        margin-right .25em
    .username
        font-weight 400
        font-size 1em
        color: transparentify($archive-inv, 0.75)
    &.nameCombo-small
        .name
            font-weight 400
            font-size 1em
            color: $archive-inv
            margin-right .25em
        .username
            font-weight 400
            font-size .9em
            color: transparentify($archive-inv, 0.75)

.framed
    padding-top 2.75rem
    padding-left 4.5rem
    padding-right 2rem

.frame
    > header
        margin-top 1rem
        margin-bottom 2.25rem

    //> nav


    > .content
        margin-top 3rem


// Old stuff, try to remove it

.inputField
    border-left 2px solid lightgrey
    display flex
    flex-direction column
    padding-left .5rem
    &:not(:last-child)
        margin-bottom .5rem
    input, textarea, select, .tag, .option > label
        background unset
        border none
        margin .2em .2em .2em 0
        font-weight 500
        font-size 1.1em
        padding 0
    .option
        display flex
        flex-direction row
        &:first-of-type
            margin-top 0.25rem
        input
            appearance none
            box-sizing border-box
            height 1rem
            width 1rem
            border 0.125rem solid
            border-radius 50%
            position relative
            margin 0.5rem 0.5rem 0.5rem 0.1rem
            &::after
                content ''
                display block
                top -.5rem
                left -.5rem
                right -.5rem
                bottom -.5rem
                border-radius 50%
                opacity 0
                transition opacity .1s
                position absolute
                background $archive-inv
            &:active::after
                opacity .1
            &::before
                content ''
                display block
                background $archive-inv
                border-radius 50%
                width 100%
                height 100%
                transition transform 0.25s
                transform scale(0)
            &:checked::before
                transform scale(0.6)
        label
            .name
                padding 0.3rem 0
            .desc
                font-size 0.875rem
                opacity 0.40
    .selectFlex
        display flex
        flex-direction row
        align-items center
        select
            appearance none
            padding-right 1.25rem
        svg
            height 1rem
            margin-left -1.5rem
            pointer-events none
        &.noItemSelected
            opacity 0.55
    textarea
        resize none
    > label
        color $archive-darkgrey
        text-transform uppercase
        font-weight 500
        margin .4em .4em 0 0
        font-size .8em
        overflow hidden
        max-height 0
        opacity 0
        transition max-height .25s, opacity .25s
        &.visible
            max-height 1rem
            opacity 1
    &.error
        border-color $archive-prim1
    .error
        font-weight 500
        color $archive-prim1
        text-transform uppercase
        font-size .8em
        padding-left 1rem
        margin-bottom .5rem
        li
            display list-item
            list-style-type disc

.inputField .autocomplete
    position relative
    display flex
    flex-wrap wrap
    input, textarea, .tag
        line-height initial
    input
        flex-grow 100
        min-width 6rem
    .tag
        display flex
        align-items center
        .icon
            height 1rem
            svg
                stroke $archive-black
                height 100%
                display block
                width auto

    .results
        position absolute
        display block
        background $archive-std
        border-top none
        z-index 99
        box-shadow 0px 0px 50px rgba(0, 0, 0, 0.15)
        top calc(100% + 2px)
        left 0
        min-width 15rem
        border-radius .75rem
        padding .4rem
        hr
            border-color $archive-grey
            margin .2rem 0
        .result
            remove-native()
            padding .6rem .6rem
            line-height 1.1rem
            &:not(:last-child)
                margin-bottom 0.3rem
            &:first-child
                border-top-left-radius .5rem
                border-top-right-radius .5rem
            &:last-child
                border-bottom-left-radius .5rem
                border-bottom-right-radius .5rem
            &.create
                background $archive-prim2-light
            &:hover, &.selected
                background $archive-prim2-dark
        .info
            padding 0 0.6rem 0.3rem 0.6rem
            font-size .8rem
            &.error
                color $archive-prim


.upload
    display flex
    box-sizing border-box
    min-height 100%
    flex-direction column
    position relative
    .dropzone
        position absolute
        visibility hidden
        left 0
        right 0
        top 0
        bottom 0
        z-index 999
        background rgba($archive-std, .25)
        padding 1rem
        &::before
            content ''
            box-sizing border-box
            height 100%
            width 100%
            display block
            border .25rem dashed rgba($archive-inv, .25)
        &.showDropzone
            visibility initial
    > .itemList
        input.uploadclick
            width 0.1px
            height 0.1px
            opacity 0
            overflow hidden
            position absolute
            z-index -1
        > .item
            transition .25s background, .25s margin
            > :not(:last-child)
                margin-right 2rem
            .preview
                border-radius $archive-radius2
                position relative
                overflow hidden
                transition .25s width
                line-height 0
                width 24rem
                img, video
                    width 100%
                    object-fit cover
                .indicatorWrapper
                    display flex
                    justify-content center
                    align-items center
                    position absolute
                    left 0
                    right 0
                    top 0
                    bottom 0
                    .indicator
                        box-shadow 0 0 2rem rgba($archive-inv, 0.2)
                @media screen and (max-width: $archive-screen-mid)
                    .preview
                        margin 0 auto 2rem auto
            &.uploadclick
                .preview
                    box-shadow none
                    line-height 1rem
                    display block
                    padding 4.25rem 1.5rem 5rem 1.5rem
                    text-align center
                    background $archive-grey
                    color $archive-prim
                    font-weight 500
                    box-sizing border-box
                    svg
                        height 2rem
                        width auto
                        fill $archive-prim
            &.itemList-progress .item
                background $archive-grey
                margin-bottom 1rem
                .preview
                    width 6.5rem
                    height 6.5rem
                    > *
                        height 100%
                        width auto
                        object-fit cover

code
    background $archive-std
    padding .5rem .75rem
    display block
    border-radius $archive-radius3
    font-family monospace

.queue
    .itemList
        > .item
            .indicatorWrapper
                display flex
                align-items center
                padding 1rem
            .nameCombo
                font-size .9rem

.post
    .media
        width 100%
        border-radius $archive-radius2
        overflow hidden
        line-height 0
        img, video
            width 100%

.itemList
    flex-grow 1
    > .item
        display flex
        margin-bottom 3rem
        border-radius $archive-radius2
        .data, .info
            flex 1
            > .error
                font-weight 500
                color $archive-prim
                text-transform uppercase
        .info
            display flex
            flex-direction column
            justify-content center
            margin-right 1rem
            padding 1rem 0
            h3
                font-size 1.25rem
                font-weight 500
                margin-bottom .25rem
            p
                font-size 0.9rem
                font-weight 400
            .btm
                margin-top 1rem
        .interaction
            display flex
            flex-direction column
        @media screen and (max-width: $archive-screen-mid)
            flex-direction column
    &.itemList-progress .item
        background $archive-grey
        margin-bottom 1rem
        .interaction
            align-items flex-end
            padding 1rem
            :not(:last-child)
                margin-bottom .5rem
            .label
                text-transform uppercase
                background $archive-std
                justify-self flex-start
                font-weight 500
                font-size .75rem
                padding .25rem .5rem
                border-radius $archive-radius2
            .button
                background $archive-prim1
                justify-self flex-end
                color white
                font-size 0.8rem
                padding 0 1rem
                text-transform uppercase
                font-weight 600
                height 2rem


.mediaList
    display flex
    > .column
        flex 1
        &:not(:last-child)
            margin-right 1rem
        > .item
            overflow hidden
            text-align center
            border-radius $archive-radius2
            background $archive-grey
            &:not(:last-child)
                margin-bottom 1rem

.previewItem
    line-height 0
    video
        width 100%
    img
        width 100%

.indicator
    padding 0.5rem
    background $archive-std
    fill $archive-inv
    line-height 0
    border-radius $archive-radius2
    > *
        width 1.5rem

.progress
    height 0.25rem
    background rgba($archive-prim1, 0.2)
    border-radius $archive-radius3
    overflow hidden
    .progress-bar
        background $archive-prim1
        transition .25s width cubic-bezier(0.45, 0.05, 0.55, 0.95)
        height 100%

.login
    position absolute
    display flex
    flex-direction column
    left 0
    right 0
    top 0
    bottom 0
    .card
        color $archive-white
        background $archive-black
        flex 1
        padding $archive-margin
        card-radius true true
    &::before
        content ''
        height 5rem
