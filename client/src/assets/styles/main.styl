@import "./reset"
@import "./mixins"
@import "./palette"

@import url('https://fonts.googleapis.com/css?family=Heebo:400,500,600');

html, body, #app
    height 100%

body
    font-family 'Heebo', sans-serif

input, button, textarea
    background unset
    border none
    color inherit
    font-family inherit
    font-size inherit

#app
    position relative

h1
    font-size 3rem
    font-weight 500

header
    margin $archive-margin
    display flex
    align-items: center
    .spacer
        flex 1


button
    background $archive-black
    color $archive-white
    padding .5rem 1.5rem
    border-radius $archive-radius
    &:focus
        background $archive-darkgrey
    &:active
        background $archive-prim

.inputButton
    background $archive-prim = #d4213a
    border-radius $archive-radius
    padding 1.25rem 2.75rem

.inputField
    display flex
    flex-direction column
    
    .autocomplete
        position relative
        padding .2rem
        display flex
        flex-wrap wrap
        input, textarea, .tag
            padding .2em .2em
            line-height initial
        input
            flex-grow 100
            min-width 6rem
        .tag
            display flex
            align-items center
            .icon
                height 1rem
                svg
                    stroke $archive-black
                    height 100%
                    display block
                    width auto
            
        .results
            position: absolute
            display block
            background $archive-white
            // box-shadow 0 .25rem 1.5rem rgba(0,0,0,0.1)
            border 2px solid $archive-grey
            border-top none
            z-index 99
            top calc(100% + 2px)
            left 0
            right 0
            border-bottom-left-radius .5rem
            border-bottom-right-radius .5rem
            padding .2rem 0 .4rem 0
            hr
                border-color $archive-grey
                margin .2rem 0
            .result
                padding .6rem .6rem
                &:hover
                    background $archive-grey
                    cursor pointer
            .info
                padding 0 0.6rem 0.3rem 0.6rem
                font-size .8rem
                &.error
                    color $archive-prim
    
    input, textarea, .tag
        background unset
        border none
        padding .4em .4em
        font-weight 500
        font-size 1.1em
    textarea
        resize none
    hr
        width 100%
        margin 0
        border none
        border-bottom 2px solid $archive-darkgrey
    label
        color $archive-darkgrey
        text-transform uppercase
        font-weight 500
        padding .25em 0
        font-size .8em
        opacity 0
        transition opacity .1s
        &.visible
            opacity 1
    
    &.error
        hr
            border-color $archive-prim
        label, input, textarea
            color $archive-prim

    .error
        font-weight 500
        color $archive-darkgrey
        text-transform uppercase
        font-size .8em
        padding-left 1rem
        margin-bottom .5rem
        li
            display list-item
            list-style-type disc


.upload
    min-height 100%
    display flex
    flex-direction column
    position relative
    .items
        flex-grow 1
            
    .dropzone
        position absolute
        visibility hidden
        left 0
        right 0
        top 0
        bottom 0
        z-index 999
        background grey
        &.showDropzone {
            visibility initial
        }
    .items
        margin 0 $archive-margin
        input.uploadclick
            width 0.1px
            height 0.1px
            opacity 0
            overflow hidden
            position absolute
            z-index -1
    .item
        display flex
        margin-bottom 3rem
        .preview
            border-radius $archive-radius
            overflow hidden
            line-height 0
            margin-right 2rem
            box-shadow 1rem 1rem 4rem -1rem rgba(0, 0, 0, 0.4)
            width 24rem
            img, video
                width 100%
                object-fit cover
        .data
            flex 1
            > .error
                font-weight 500
                color $archive-prim
                text-transform uppercase
        @media screen and (max-width: $archive-screen-mid)
            flex-direction column
            .preview
                margin 0 auto 2rem auto
        &.uploadclick
            .preview
                box-shadow none
                line-height 1rem
                display block
                padding 4.25rem 1.5rem 5rem 1.5rem
                text-align center
                background $archive-grey
                color $archive-prim
                font-weight 500
                box-sizing border-box
                svg
                    height 2rem
                    width auto
                    stroke $archive-prim

.footer
    position fixed
    color $archive-white
    background $archive-black
    padding 1rem
    left 0
    right 0
    bottom 0

.login
    position absolute
    display flex
    flex-direction column
    left 0
    right 0
    top 0
    bottom 0
    .card
        color $archive-white
        background $archive-black
        flex 1
        padding $archive-margin
        card-radius true true
    &::before
        content ''
        height 5rem